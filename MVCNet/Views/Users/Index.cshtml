@model IEnumerable<User>

@{
    ViewData["Title"] = "Usuarios";
}
<h1>Usuarios</h1>

@if(TempData["Message"] is not null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a class="btn btn-primary" asp-action="CreateUser">Crear Usuario</a>

<table id="table" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Profile)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => user.Name)</td>
                <td>@Html.DisplayFor(m => user.Profile.Name )</td>
                <td><a class="btn btn-secondary" asp-action="EditUser" asp-route-id="@user.Id">Editar</a></td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    <script ty>
        $(document).ready(() => {
            $("#table").DataTable();
        })
    </script>
}